{
	"manifest_version": 2,
	"name": "TFS Card Mod",
	"version": "1.9",
	"description": "Productivity enhancement mod for itracks Go and BBFG Boards in TFS.",  
	"options_page": "options.html",
	"icons": {
		"16": "icons/logo16.png",
		"38": "icons/logo38.png",
		"48": "icons/logo48.png",
		"128": "icons/logo128.png"
	},
	"permissions": [
		"https://go.itracks.com/",
		"http://go.itracks.com/",
		"https://bbfg.itracks.com/*",
		"http://bbfg.itracks.com/*",
		"storage"
	],
	
	"content_scripts": [
		{
			"matches": [
				"http://tfs:8080/*",
				"https://tfs:8080/*",
				"http://tfs.itracks.com:8080/*",
				"https://tfs.itracks.com:8080/*"
			],
			"js": [
				"scripts/jquery-2.1.4.min.js",
				"scripts/content.js"
			],
			"run_at": "document_end"
		}
	],
	"web_accessible_resources": [
		"icons/chrome.png",
		"icons/firefox.png",
		"icons/ie.png",
		"icons/edge.png",
		"icons/safari.png",
		"icons/android.png",
		"icons/ios.png",
		"icons/board.png",
		"icons/chat.png",
		"icons/idi.png",
		"icons/imarkit.png",
		"icons/vault.png",
		"icons/vchat.png",
		"icons/doc.png",
		"icons/prod.png",
		"icons/patch.png"
	]
}